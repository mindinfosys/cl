<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_pos_session_form_inherit_edit_close_Date" model="ir.ui.view">
        <field name="name">pos.session.form.inherit.edit_close_Date</field>
        <field name="model">pos.session</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_session_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='stop_at']" position="attributes">
                <attribute name="attrs">{'readonly': [('state', '=', 'closed')]}</attribute>
            </xpath>
        </field>
    </record>

</odoo>
